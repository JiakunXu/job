<!-- We don't need full layout here, because this page will be parsed with Ajax-->
<!-- Top Navbar-->
<div class="navbar">
	<div class="navbar-inner">
		<div class="left"><a href="#" class="back link"> <i class="icon icon-back"></i><span></span></a></div>
		<div class="center sliding">我的简历</div>
		<div class="right">
			<!-- Right link contains only icon - additional "icon-only" class-->
			<a href="$!{env.appUrl}/resume/edit.htm" class="link icon-only" data-ignore-cache="true"> <i class="iconfont icon-edit color-gray"></i><span></span></a>
		</div>
	</div>
</div>
<div class="pages">
	<!-- Page, data-page contains page name-->
	<div data-page="resume.my" class="page no-tabbar">
		<!-- Scrollable page content-->
		<div class="page-content">
			<div class="card">
				<div class="card-header">
					<div class="left"><i class="iconfont icon-profile" style="font-size: 16px;"></i> $!{resume.name}</div>
					<div class="right"><i class="iconfont icon-phone" style="font-size: 14px;"></i> $!{resume.tel}</div>
				</div>
				<div class="card-content">
					<div class="list-block media-list">
						<ul>
    						<li class="item-content">
    							<div class="item-inner">
									#parse("/jobs/resume/content.vm")
                                </div>
                            </li>
                        </ul>
					</div>
				</div>
				<div class="card-footer">
                    <span><i class="iconfont icon-notification" style="font-size: 13px;"></i> $!{resume.remark}</span>
				</div>
			</div>
			<div class="card">
    			<div class="card-content">
					<div class="list-block media-list">
						<ul>
        					#foreach($detail in $!{resume.resumeDetailList})
        					<li class="item-content">
								<div class="item-inner">
									#parse("/jobs/resume/content.detail.vm")
                                </div>
                            </li>
							#end
                        </ul>
                    </div>
                </div>
    		</div>
        </div>
    </div>
</div>