<!-- We don't need full layout here, because this page will be parsed with Ajax-->
<!-- Top Navbar-->
<div class="navbar">
	<div class="navbar-inner">
		<div class="left"><a href="#" class="back link"> <i class="icon icon-back color-gray"></i><span></span></a></div>
		<div class="center sliding">我的应聘</div>
		<div class="right">
			<!-- Right link contains only icon - additional "icon-only" class-->
		</div>
	</div>
</div>
<div class="pages">
	<!-- Page, data-page contains page name-->
	<div data-page="user.job.list" class="page no-tabbar">
		<!-- Search bar -->
		<form data-search-list=".list-block-search" data-search-in=".item-title" class="searchbar searchbar-init item-list-searchbar">
			<div class="searchbar-input">
				<input type="search" placeholder="搜索" /><a href="#" class="searchbar-clear"></a>
			</div><a href="#" class="searchbar-cancel">取消</a>
		</form>
		
		<!-- Search bar overlay -->
		<div class="searchbar-overlay"></div>
			
		<!-- Scrollable page content-->
		<div class="page-content pull-to-refresh-content infinite-scroll">
			<div class="pull-to-refresh-layer">
				<div class="preloader"></div>
				<div class="pull-to-refresh-arrow"></div>
			</div>
			
			<div class="more"></div>
			
			<div class="list-block cards-list media-list list-block-search searchbar-found">
				#foreach($job in $!{jobList})
				<ul>
					<li class="card" style="border-radius: 5px; margin: 10px 5px;">
						<div class="card-header" style="font-size: 14px;">
							<div class="left"><i class="iconfont icon-countdown" style="font-size: 16px;"></i> $!{job.createDate}</div>
							<div class="right">
								<a href="#">取消</a>
							</div>
						</div>
						<div class="card-content">
							<div class="card-content-inner" style="padding: 3px;">
								<div class="item-content">
        							<a class="item-inner" href="$!{env.appUrl}/job/detail.htm?jobId=$!{job.jobId}" data-ignore-cache="true">
        								<div class="item-title-row">
                                            <div class="item-title">$!{job.title}</div>
        								</div>
        								<div class="item-title-row">
											<div class="row no-gutter" style="width: 100%;">
												<div class="col-50">
													<div class="item-subtitle">工作地点：$!{job.workAddress}</div>
                                                </div>
												<div class="col-50">
													<div class="item-subtitle">工作性质：$!{job.jobNature}</div>
                                                </div>
                                            </div>
        								</div>
										<div class="item-title-row">
											<div class="row no-gutter" style="width: 100%;">
												<div class="col-50">
													<div class="item-subtitle">学历：$!{job.education}</div>
                                                </div>
												<div class="col-50">
													<div class="item-subtitle">工作经验：$!{job.workYear}</div>
                                                </div>
                                            </div>
        								</div>
										<div class="item-title-row">
											<div class="row no-gutter" style="width: 100%;">
												<div class="col-50">
													<div class="item-subtitle">薪水：￥$!formatUtil.getAmountFormat($!{job.salary})</div>
                                                </div>
                                            </div>
        								</div>
                                    </a>
									<div class="item-after">
										<a href="$!{env.appUrl}/job/detail.htm?jobId=$!{job.jobId}" data-ignore-cache="true">
											<i class="iconfont icon-edit color-base"></i>
										</a>
									</div>
                                </div>
							</div>
						</div>
						<div class="card-footer" style="min-height: 0; padding: 5px 15px;">
                            <span style="font-size: 12px;">
								<i class="iconfont icon-notification" style="font-size: 12px;"></i> $!{job.remark}
							</span>
						</div>
					</li>
				</ul>
				#end
            </div>
        </div>
    </div>
</div>