<!-- We don't need full layout here, because this page will be parsed with Ajax-->
<!-- Top Navbar-->
<div class="navbar">
	<div class="navbar-inner">
		<div class="left"><a href="#" class="back link"> <i class="icon icon-back color-gray"></i><span></span></a></div>
		<div class="center sliding">投简历</div>
		<div class="right">
			<!-- Right link contains only icon - additional "icon-only" class-->
		</div>
	</div>
</div>
<div class="pages">
	<!-- Page, data-page contains page name-->
	<div data-page="user.job" class="page no-tabbar">
		<!-- Scrollable page content-->
		<div class="page-content">
			<div class="card" style="border-radius: 5px; margin: 10px 5px;">
				<div class="card-header" style="font-size: 14px;">
					<div class="left"><i class="iconfont icon-cascades" style="font-size: 16px;"></i> $!{job.title}</div>
					<div class="right"></div>
				</div>
				<div class="card-content">
					<div class="card-content-inner" style="padding: 18px;">
    					<div class="list-block media-list">
    						<ul>
        						<li class="item-content">
        							<div class="item-inner">
        								<div class="item-title-row">
											<div class="row no-gutter" style="width: 100%;">
												<div class="col-50">
													<div class="item-subtitle color-gray" style="font-size: 12px;">工作地点：$!{job.workAddress}</div>
                                                </div>
												<div class="col-50">
													<div class="item-subtitle color-gray" style="font-size: 12px;">工作性质：$!{job.jobNature}</div>
                                                </div>
                                            </div>
        								</div>
										<div class="item-title-row">
											<div class="row no-gutter" style="width: 100%;">
												<div class="col-50">
													<div class="item-subtitle color-gray" style="font-size: 12px;">学历：$!{job.education}</div>
                                                </div>
												<div class="col-50">
													<div class="item-subtitle color-gray" style="font-size: 12px;">工作经验：$!{job.workYear}</div>
                                                </div>
                                            </div>
        								</div>
										<div class="item-title-row">
											<div class="row no-gutter" style="width: 100%;">
												<div class="col-50">
													<div class="item-subtitle color-gray" style="font-size: 12px;">薪水：￥$!formatUtil.getAmountFormat($!{job.salary})</div>
                                                </div>
                                            </div>
        								</div>
                                    </div>
                                </li>
                            </ul>
    					</div>
                    </div>
				</div>
			</div>
			
			<form id="user/job/deliver" action="$!{env.appUrl}/user/job/deliver.htm" method="POST" class="ajax-submit user-job-form">
				<input type="hidden" name="jobId" value="$!{jobId}" />
			</form>
			<div class="content-block">
				<p><a href="javascript:user_job_deliver();" class="button button-big button-fill weui_btn_primary">投递</a></p>
            </div>
        </div>
    </div>
</div>