<!-- We don't need full layout here, because this page will be parsed with Ajax-->
<!-- Top Navbar-->
<div class="navbar">
	<div class="navbar-inner">
		<div class="left"></div>
		<div class="center sliding">找项目</div>
		<div class="right">
			<!-- Right link contains only icon - additional "icon-only" class-->
			<a href="$!{env.appUrl}/job/template.htm" class="link icon-only" data-ignore-cache="true"> <i class="iconfont icon-more color-gray"></i><span></span></a>
		</div>
	</div>
</div>
<div class="pages">
	<!-- Page, data-page contains page name-->
	<div data-page="job.list" class="page">
		<!-- Search bar -->
		<form data-search-list=".list-block-search" data-search-in=".item-subtitle" class="searchbar searchbar-init item-list-searchbar">
			<div class="searchbar-input">
				<input type="search" placeholder="搜索" /><a href="#" class="searchbar-clear"></a>
			</div><a href="#" class="searchbar-cancel">取消</a>
		</form>
		
		<!-- Search bar overlay -->
		<div class="searchbar-overlay"></div>
			
		<!-- Scrollable page content-->
		<div class="page-content pull-to-refresh-content infinite-scroll">
			<div class="pull-to-refresh-layer">
				<div class="preloader"></div>
				<div class="pull-to-refresh-arrow"></div>
			</div>
			
			<div class="more"></div>
			
			<div class="list-block cards-list media-list list-block-search searchbar-found">
				#foreach($job in $!{jobList})
				<ul>
					<li class="card" style="border-radius: 5px; margin: 10px 5px;">
						#if($!{user.userId} == $!{job.userId})
						<span class="bw"></span>
						#end
						<div class="card-header" style="font-size: 14px;">
							<div class="left"><i class="iconfont icon-cascades" style="font-size: 16px;"></i> $!{job.title}</div>
							<div class="right"><i class="iconfont icon-post" style="font-size: 14px;"></i> $!{job.userName}</div>
						</div>
						<div class="card-content">
							<div class="item-content">
    							<a class="item-inner" href="$!{env.appUrl}/job/detail.htm?jobId=$!{job.jobId}" data-ignore-cache="true">
    								#parse("/jobs/job/content.vm")
                                </a>
								<div class="item-after">
									<a href="$!{env.appUrl}/job/detail.htm?jobId=$!{job.jobId}" data-ignore-cache="true">
										<i class="iconfont icon-edit color-base"></i>
									</a>
								</div>
                            </div>
						</div>
						<div class="card-footer" style="min-height: 0; padding: 5px 15px;">
                            <span style="font-size: 12px;">
								<i class="iconfont icon-notification" style="font-size: 12px;"></i> $!{job.remark}
							</span>
						</div>
					</li>
				</ul>
				#end
            </div>
        </div>
    </div>
</div>