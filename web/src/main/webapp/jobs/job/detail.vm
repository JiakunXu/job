<!-- We don't need full layout here, because this page will be parsed with Ajax-->
<!-- Top Navbar-->
<div class="navbar">
	<div class="navbar-inner">
		<div class="left"><a href="#" class="back link"> <i class="icon icon-back color-gray"></i><span></span></a></div>
		<div class="center sliding">项目</div>
		<div class="right">
			<!-- Right link contains only icon - additional "icon-only" class-->
		</div>
	</div>
</div>
<div class="pages">
	<!-- Page, data-page contains page name-->
	<div data-page="job.detail" class="page no-tabbar">
		<!-- Scrollable page content-->
		<div class="page-content">
			<div class="card" style="border-radius: 5px; margin: 10px 5px;">
				<span class="bw"></span>
				<div class="card-content">
					<div class="card-content-inner" style="padding: 18px;">
    					<div class="list-block media-list">
    						<ul>
        						<li class="item-content">
        							<div class="item-inner">
        								<div class="item-title-row">
                                            <div class="item-title">$!{job.title}</div>
        								</div>
        								<div class="item-title-row">
        									<div class="row no-gutter" style="width: 100%;">
        										<div class="col-30">
        											<div class="item-subtitle color-gray" style="font-size: 12px;">$!{job.salary}</div>
                                                </div>
        										<div class="col-30">
        											<div class="item-subtitle color-gray" style="font-size: 12px;">$!{job.workAddress}</div>
                                                </div>
        										<div class="col-30">
        											<div class="item-subtitle color-gray" style="font-size: 12px;">$!{job.jobNature}</div>
                                                </div>
                                            </div>
        								</div>
        								<div class="item-title-row">
        									<div class="row no-gutter" style="width: 100%;">
        										<div class="col-30">
        											<div class="item-subtitle color-gray" style="font-size: 12px;">$!{job.workYear}</div>
                                                </div>
        										<div class="col-30">
        											<div class="item-subtitle color-gray" style="font-size: 12px;">$!{job.education}</div>
                                                </div>
                                                <div class="col-30"></div>
                                            </div>
        								</div>
                                    </div>
        							<div class="item-after">
										<a href="$!{env.appUrl}/user/job/resume.htm?jobId=$!{job.jobId}" data-ignore-cache="true">
											<i class="iconfont icon-selection color-base"></i>
										</a>
									</div>
                                </li>
                            </ul>
							<ul>
    							#foreach($jobDetail in $!{job.jobDetailList})
        						<li class="item-content">
        							<div class="item-inner">
    									<div class="item-title">$!{jobDetail.content}</div>
    								</div>
                                </li>
    							#end
                            </ul>
    					</div>
                    </div>
				</div>
				<div class="card-footer" style="min-height: 0; padding: 5px 15px;">
                    <span style="font-size: 12px;">
						<i class="iconfont icon-notice" style="font-size: 15px;"></i>
						包吃包住
					</span>
				</div>
			</div>
        </div>
    </div>
</div>